<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="0dp"
        >


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:ads="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:gravity="top"
	android:layout_gravity="center"
>





	<LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="20dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:id="@+id/blayouttop"
                android:background="@android:color/transparent"
        >
                <ImageButton 
                        android:id="@+id/iemail"
			android:clickable="true"
			android:gravity="right"
			android:layout_gravity="bottom"
			android:layout_width="32dp"
			android:layout_height="32dp"
                />
	</LinearLayout>

	<LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:padding="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/blayouttitle"
                android:background="@android:color/transparent"
        >
	<TextView
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/title"
                android:text="@string/app_name"
                android:textColor="#000000"
                android:textSize="26dp"
        />
	</LinearLayout>

</LinearLayout>
<LinearLayout
                android:orientation="horizontal"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:padding="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/blayouttophorizontal"
                android:background="@android:color/transparent"
        >


	<LinearLayout
                android:orientation="vertical"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
		android:layout_weight="1"
		android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/blayouttop"
                android:background="@android:color/transparent"
        >
		<ImageButton 
			android:layout_gravity="center"
			android:gravity="center"	
			android:id="@+id/iadd"
			android:layout_marginTop="40dp"
			android:layout_height="64dp"
			android:layout_width="64dp"
		/>


	<TextView
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/tadd"
                android:text="@string/tadd"
                android:textColor="#000000"
                android:textSize="16dp"
        />
        </LinearLayout>


	<LinearLayout
		android:layout_height="fill_parent"
                android:layout_width="0dp"
		android:layout_weight="1"
		android:layout_marginTop="10dp"
		android:layout_gravity="center"
		android:gravity="center"	
		android:orientation="vertical"
	>
		<ImageButton 
			android:layout_gravity="center"
			android:gravity="center"	
			android:id="@+id/ibank"
			android:layout_marginTop="40dp"
			android:layout_height="64dp"
			android:layout_width="64dp"
		/>
	<TextView
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/tbank"
                android:text="@string/tbank"
                android:textColor="#000000"
                android:textSize="16dp"
        />

	</LinearLayout>




	<LinearLayout
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
		android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"        
                android:orientation="vertical"
        >
                <ImageButton 
                        android:layout_gravity="center"
                        android:gravity="center"        
                        android:id="@+id/ispend"
                        android:layout_marginTop="40dp"
                        android:layout_height="64dp"
                        android:layout_width="64dp"
                />
        <TextView
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/tspend"
                android:text="@string/tspend"
                android:textColor="#000000"
                android:textSize="16dp"
        />

        </LinearLayout>





















</LinearLayout>


</FrameLayout>
